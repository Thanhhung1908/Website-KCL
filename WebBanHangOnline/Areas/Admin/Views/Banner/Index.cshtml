<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Danh Sách Slide </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách @ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/banner/Add" class="btn btn-primary"> Thêm mới</a>
                <a href="#" class="btn btn-danger" id="btnDeleteAll"> Xoá Tất Cả</a>
            </div>
        </div>
        <div class="card-body">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th> <input type="checkbox" id="SelectAll" /></th>

                        <th> STT</th>
                        <th> Hình ảnh</th>
                        <th> Tiêu Đề </th> 
                        <th> Danh Mục </th>
                        <th> Ngày Tạo </th>
                        <th> Hiển Thị </th>
                        <th style="width:150px"> </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.page - 1) * ViewBag.pageSize) + 1;
                        foreach (var item in Model)
                        {
                            var srtCheck = item.IsActive ? "<a href='#'> <i class= 'fa fa-check text-success'> </i> </a>" : "<a href='#'> <i class= 'fas fa-times text-danger'> </i> </a>";

                            <tr id="trow_@item.Id">
                                <td> <input type="checkbox" class="cbkItem" data-id="@item.Id" /></td>

                                <td>@i</td>
                                <td><img src="@item.Image" width="100" /></td>
                                <td>@item.Title</td>>
                                <td>@item.bannerCategory.Title</td>>
                                <td>@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">
                                    @Html.Raw(srtCheck)
                                </td>
                                <td>
                                    <a href="/admin/banner/edit/@item.Id" class="btn btn sm btn-primary">Edit</a>
                                    <a href="#" data-id="@item.Id" class="btn btn sm btn-danger btnDelete">Delete</a>

                                </td>
                            </tr>
                            i++;
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="4">không có bản ghi nào!</td>
                        </tr>

                    }
                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', "#btnDeleteAll", function (e) {
                e.preventDefault();
                var str = "";

                var checkbox = $(this).parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkbox.each(function () {
                    if (this.checked) {
                        checkbox.attr('selected', 'checked')
                        var _id = $(this).data('id');
                        if (i === 0) {
                            str += _id;
                        }
                        else {
                            str += "," + _id;
                        }
                        i++;
                    }
                    else {
                        checkbox.attr('selected', '')
                    }
                });
                if (str.length > 0) {
                    var conf = confirm("Bạn có muốn xoá các bản ghi này hay không !")
                    if (conf === true) {
                        $.ajax({
                            url: '/admin/banner/deleteAll',
                            type: "POST",
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                                else {
                                    alert("Xoá không thành công!");
                                }
                            }
                        })
                    }

                }
            });
            $('body').on('change', "#SelectAll", function () {
                var checkStatus = this.checked;
                //alert(checkStatus)
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkbox.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkbox.attr('selected', 'checked')
                    }
                    else {
                        checkbox.attr('selected', '')

                    }
                })
            })
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data('id');
                //alert(id)
                var conf = confirm("Bạn có muốn xoá bản ghi này không?");
                if (conf === true) {
                    $.ajax({
                        url: '/admin/banner/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                            else {
                                alert("Xoá không thành công!");
                            }
                        }
                    });
                }
            });
        });
    </script>
}
