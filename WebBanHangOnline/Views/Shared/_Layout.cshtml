    <script>

        $(document).ready(function () {
            $('#slidemain-slide').owlCarousel({
                loop: true,
                items: 1,
                smartSpeed: 450,
                autoplay: 3000,
                smartSpeed: 2000,
            });

            $("#slideproduct-slide").owlCarousel({
                loop: true,
                items: 1,
                stagePadding: 20,
                smartSpeed: 450,
                autoplay: 4000,
                smartSpeed: 1000,
                margin: 30
            });

            $("#slideCustomer-slide").owlCarousel({
                loop: true,
                items: 1,
                stagePadding: 10,
                smartSpeed: 500,
                autoplay: 5000,
                smartSpeed: 1500,
                margin: 30,
                responsive: {
                    0: {
                        nav: false,
                        items: 3
                    },
                    768: {
                        nav: true,
                        items: 3
                    }
                }
            });

            $("#main_product-slide").owlCarousel({
                loop: true,
                items: 1,
                smartSpeed: 450,
                autoplay: 3000,
                smartSpeed: 1000,
                margin: 30,
                responsive: {
                    0: {
                        nav: false,
                        items: 1
                    },
                    768: {
                        nav: false,
                        items: 3
                    }
                }
            });
            $("#news-carousel").owlCarousel({
                loop: true,
                items: 1,
                // stagePadding: 50,
                smartSpeed: 450,
                autoplay: 3000,
                smartSpeed: 1000,
                // margin: 10,
                responsive: {
                    0: {
                        nav: false,
                        items: 1
                    },
                    425: {
                        nav: false,
                        items: 1
                    },
                    768: {
                        nav: false,
                        items: 3
                    }
                }
            });

            $('body').on('click', '.btnLuu', function () {
                var cusName = $('#validationCustom01').val();
                var address = $('#validationCustom02').val();
                var email = $('#validationCustomUsername').val();
                var feedback = $('#validationCustom05').val();
                var ischeck = $('#invalidCheck').val();
                //var mess = ischeck == true ? "thanh cong" : "fail";
                //alert(mess);
                if (cusName != "" && address != "" && email != "" && feedback != "") {
                    $.ajax({

                        url: '/admin/feedback/Add',
                        type: 'POST',
                        data: {
                            cusName: cusName,
                            address: address,
                            email: email,
                            feedback: feedback,
                            ischeck: ischeck
                        },
                        success: function (res) {
                            if (res.Success) {
                                alert("Bạn Đã Gửi ý kiến phản hồi thành công ");
                                location.reload();
                            }
                        }
                    })
                }


            });
        });

        var btn = document.getElementById("navbar");
        var btns = document.getElementsByClassName("lk");
        for (var i = 0; i < btns.length; i++) {
            btns[i].addEventListener('click', function () {
                var current = document.getElementsByClassName("active");
                current[0].className = current[0].className.replace("active")
                this.className += " active"
            })
        }

    </script>

   
